<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/signin_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_register_header"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Signin"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:text="Spot Photo Hunting"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_welcome"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signin_ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_alternate_2"
                android:drawableLeft="@drawable/ic_person_grey"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/text_color_light"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Password"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signin_ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_alternate_2"
                android:drawableLeft="@drawable/ic_lock_grey"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="18dp"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signin_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|end"
                android:layout_marginTop="32dp"
                android:background="@drawable/button_green"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signin_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rotateloading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:loading_color="#2196F3"
            app:loading_width="2dp" />
    </LinearLayout>
</RelativeLayout>